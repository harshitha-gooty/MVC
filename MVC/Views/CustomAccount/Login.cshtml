@model Models.CustomAccount.Login

@{
    ViewBag.Title = "Login";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (@Html.BeginForm("Login", "CustomAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>log-in with your account</h4>
                <hr/>
                @Html.ValidationSummary(true);@*will display below the textboxes if true else on the summary*@
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName,"", new { @class = "form-control",placeholder="user name" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control",placeholder="password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input id="Submit" type="submit" class="btn btn-default" value="Login" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register", "Register", "CustomAccount") if you do not have an account
                </p>

            }
        </section>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/Jqueryval")
}